mixin product-shot()
  .product-shot
    if block
      block

mixin vertical-iphone(screenshot)
  .medium-6.columns
    .iphone-5-vertical
      img(src='img/'+screenshot)

mixin horizontal-ipad(screenshot)
  .ipad-horizontal
    img(src='img/'+screenshot)

mixin project-logo(logo)
  img.logo(src='img/'+logo)

mixin page()
  doctype html
  html(lang='en')
    head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title Mark Miro
      link(rel='stylesheet', href='build/app.css')
      //if lt IE 9
        script(src='http://html5shiv.googlecode.com/svn/trunk/html5.js')
      script(src='bower_components/modernizr/modernizr.js')
    body
      include header
      #content
        block
      include footer
      script(src='bower_components/jquery/jquery.js')
      script(src='node_modules/grunt-contrib-jade/node_modules/jade/runtime.js')
      script(src='http://localhost:35729/livereload.js')
      script(src='build/app.min.js')